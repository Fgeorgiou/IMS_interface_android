<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.filippos.ims_interface">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomepageActivity" />
        <activity android:name=".OrdersSubmenuActivity" />
        <activity android:name=".ReportsSubmenuActivity" />
        <activity android:name=".ScanItemsActivity" />
        <activity android:name=".AdminSubmenuActivity" />
        <activity android:name=".OrdersActivity" android:windowSoftInputMode="stateHidden">
        </activity>
    </application>

</manifest>